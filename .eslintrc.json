{
    "extends": ["eslint:recommended", "prettier"],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": ["react", "@typescript-eslint", "prettier", "simple-import-sort"],
    "rules": {
        "no-unused-vars": "off"
    },
    "env": {
        "browser": true,
        "es6": true,
        "node": true
    },
    "ignorePatterns": "**/*.d.ts"
}
